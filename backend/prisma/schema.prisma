generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model Users {
  username   String     @id @db.VarChar(100)
  password   String     @db.VarChar(100)
  name       String     @db.VarChar(100)
  token      String?    @db.VarChar(100)
  categories Category[]
  notes      Notes[]

  @@map("users")
}

model Category {
  id       Int     @id @default(autoincrement())
  name     String  @db.VarChar(100)
  username String  @db.VarChar(100)
  user     Users   @relation(fields: [username], references: [username], onDelete: Cascade)
  notes    Notes[]

  @@unique([username, name])
  @@map("categories")
}

model Notes {
  id         Int       @id @default(autoincrement())
  title      String    @db.VarChar(100)
  content    String    @db.Text
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  username   String    @db.VarChar(100)
  categoryId Int?
  category   Category? @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  users      Users     @relation(fields: [username], references: [username], onDelete: Cascade)

  @@index([categoryId], map: "notes_categoryId_fkey")
  @@index([username], map: "notes_username_fkey")
  @@map("notes")
}
